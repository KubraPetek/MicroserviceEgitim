{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5011 //Catalog bu porttan ayaða kalkýyor 
        }
      ],
      "UpstreamPathTemplate": "/services/catalog/{everything}", //everything ocelot dan geliyor  --Burasý client tarafý burdan gelen isteði Catalog api ye yönlendirmemiz lazým 
